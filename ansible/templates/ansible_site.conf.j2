<VirtualHost *:80>
    ServerAdmin {{ webmaster_email }}
    DocumentRoot {{ site_dir }}
    ServerName {{ site_name }}

    <Directory {{ site_dir }}>
        Options Indexes FollowSymLinks
        AllowOverride None
        Require all granted
    </Directory>

    ErrorLog ${APACHE_LOG_DIR}/error.log
    CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>
